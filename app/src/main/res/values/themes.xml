<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NeoCafe" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="BottomNavStyle" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/color_selector</item>
        <item name="itemTextColor">@color/color_selector</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/main_orange</item>
        <item name="colorControlHighlight">@color/main_orange</item>
        <item name="colorControlActivated">@color/main_orange</item>

    </style>

    <style name="Theme.NeoCafe" parent="Base.Theme.NeoCafe" />
</resources>